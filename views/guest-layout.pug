doctype html
html
    head
    block head
        title= title
        link(rel='stylesheet' href='/stylesheets/index.css')
        script(src='/javascripts/index.js' type='module')
    body
        div(class='guest-navbar')
            h1 Welcome to Music Hunt!
            div(class="nav-bar")
                div(class="logo")
                div(class="search-bar")
            form(id="searchbar" action='/search/results' method="post")
                input(type="search" id="query" name="SearchName" placeholder="Albums")
                input(type="hidden" class='token' name="_csrf" value=csrfToken)
                button Search
                div(class="nav-buttons")
                    a(href='/') Home
                    a(href='/albums') Albums
                    a(href='/about') About
            div
                a(href='/users/signin')
                    input(type='button' class='signin btn' value='Sign In')
                a(href='/users/signup')
                    input(type='button' class='signup btn' value='Sign Up')
    block content
