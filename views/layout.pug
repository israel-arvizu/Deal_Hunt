doctype html
html
  head
      block head
        title= title
        link(rel='stylesheet' href='/stylesheets/index.css')
        link(rel='stylesheet' href='/stylesheets/layout.css')
        script(src="/javascripts/addToFave.js" type='module')
        script(src="/javascripts/deleteReview.js" type="module")
        script(src="/javascripts/editReview.js" type="module")
  body
    div(class="nav-bar")
        div(id='left_nav')
            img(src='/favicon.ico' id='logo')
            div(class="search-bar")
                form(id="searchbar" action='/search/results' method="post")
                    input(type="search" id="query" name="SearchName" placeholder="Search albums...")
                    input(type="hidden" class='token' name="_csrf" value=csrfToken)
                    button(class="search btn") Search
            div(class="nav-buttons")
                a(href='/') Home
                a(href='/albums') Albums
                a(href='/about') About
        div(id='right_nav')
            div(class='dropdown')
                button(class='dropbtn') User's Name
                div(class='dropdown-content')
                    a(href=`/users/${userId}`) Profile
                    a(href='/settings') Settings
                    a(href='/users/signout') Sign Out
    div(id='header-border')



    block content
