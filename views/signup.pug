extends guest-layout.pug

block content
    if errors.length > 0
        each err in errors
            p= err
    form(action="/users/signup" method="post")
        input(type="hidden" name="_csrf" value=csrfToken)
        label(for="firstName") First Name
        input(type="text" name="firstName" required value=user.firstName)
        label(for="lastName") Last Name
        input(type="text" name="lastName" required value=user.lastName)
        label(for="email") Email
        input(type="text" name="email" required value=user.email)
        label(for="hashedPassword") Password
        input(type="text" name="hashedPassword" required)
        label(for="confirmPassword") Confirm Password
        input(type="text" name="confirmPassword" required)
        button(type='submit') Sign Up
