doctype html
html
  head
      block head
        title= title
        link(rel='stylesheet' href='/stylesheets/index.css')
        script(src="/javascripts/addToFave.js" type='module')
  body
    div(class="nav-bar")
        div(class="logo")
        div(class="search-bar")
            form(id="searchbar" action='/search/results' method="post")
                input(type="search" id="query" name="SearchName" placeholder="Albums")
                input(type="hidden" class='token' name="_csrf" value=csrfToken)
                button Search
        div(class="nav-buttons")
            a(href='/') Home
            a(href='/albums') Albums
            a(href='/about') About
        div(class=right-sector)
            img(src='/favicon.ico')
            div(class='dropdown')
                button(class='dropbtn') User's Name
                div(class='dropdown-content')
                    a(href=`/users/${userId}`) Profile
                    a(href='/settings') Settings
                    a(href='/users/signout') Sign Out




    block content
